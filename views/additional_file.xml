<openerp>
    <data>
        <record id="paper_submission_file_form" model="ir.ui.view">
            <field name="name">Additional File View</field>
            <field name="model">paper_submission.file</field>
            <field name="arch" type="xml">
                <form string="Additional File">
                    <sheet>
                        <div class="oe_title">
                            <label for="description" class="oe_edit_only"/>
                            <h1><field name="description"/></h1>
                        </div>
                        <group>
                            <field name="paper_id" readonly="True"/>
                            <field name="category"/>
                            <field name="binary"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>
